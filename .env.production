# QMS-AI生产环境配置

# 应用配置
NODE_ENV=production
PROJECT_NAME=qms-ai

# 数据库配置
DB_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=qms
DB_USER=qms_app
DB_PASSWORD=your_secure_db_password_here

# Redis缓存配置
CACHE_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# 安全配置
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_chars
CORS_ORIGIN=https://your-domain.com

# AI服务配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/qms-ai.log

# 性能配置
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=5000
QUERY_TIMEOUT=30000

# 缓存TTL配置 (秒)
CACHE_TTL_USER_SESSION=86400
CACHE_TTL_CONVERSATIONS=1800
CACHE_TTL_STATS=300
CACHE_TTL_MODELS=3600

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.txt,.md,.doc,.docx,.pdf

# 监控配置
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# 数据库管理工具配置
PGADMIN_PASSWORD=your_secure_pgadmin_password_here
