<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.transcend.plm.configcenter.language.infrastructure.repository.mapper.CfgVersionMapper">

    <resultMap id="BaseResultMap" type="com.transcend.plm.configcenter.language.infrastructure.repository.po.CfgVersionPo">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="bid" column="bid" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result  property="version" column="version"  jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,bid,
        name,version,
        tenant_id,created_by,created_time,
        updated_by,updated_time
    </sql>
    <update id="increment">
        update cfg_version
        set version = version+1
        where name = #{version}
    </update>
    <select id="getVersion" resultType="java.lang.Long">
        select version
        from cfg_version
        where name = #{name}
    </select>
</mapper>
