{
  "name": "qms-ai-backend",
  "version": "1.0.0",
  "description": "QMS-AI Backend Mock Services",
  "type": "commonjs",
  "main": "config-center-mock.js",
  "scripts": {
    "start": "node chat-service.js",
    "start:chat": "node chat-service.js",
    "start:config": "node lightweight-config-service.js",
    "start:auth": "node auth-service.js",
    "start:coze": "node coze-studio-service.js",
    "start:parser": "node enhanced-document-parser.js",
    "start:export": "node export-service-standalone.js",
    "start:advanced": "node advanced-features-service.js",
    "start:gateway": "node api-gateway.js",
    "start:all": "concurrently \"npm run start:chat\" \"npm run start:config\" \"npm run start:auth\" \"npm run start:coze\" \"npm run start:export\" \"npm run start:advanced\" \"npm run start:gateway\"",
    "dev": "nodemon chat-service.js",
    "dev:chat": "nodemon chat-service.js",
    "dev:config": "nodemon lightweight-config-service.js",
    "dev:auth": "nodemon auth-service.js",
    "dev:all": "concurrently \"npm run dev:chat\" \"npm run dev:config\" \"npm run dev:auth\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:isolation": "node test-user-isolation.js",
    "test:redis": "node test-redis.js",
    "test:redis-persistence": "node test-redis-persistence.js",
    "build": "tsc",
    "health": "curl -s http://localhost:3004/health && curl -s http://localhost:8082/health && curl -s http://localhost:8083/health",
    "logs": "tail -f logs/*.log"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cosine-similarity": "^1.0.1",
    "csv-parser": "^3.0.0",
    "csurf": "^1.11.0",
    "docx": "^8.2.2",
    "dotenv": "^17.2.1",
    "escape-html": "^1.0.3",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^2.0.9",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.6.0",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "papaparse": "^5.5.3",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "redis": "^4.7.1",
    "sharp": "^0.33.0",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^5.0.0",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "ws": "^8.18.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "artillery": "^2.0.20",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "nodemon": "^3.1.7",
    "nyc": "^17.1.0",
    "supertest": "^7.0.0",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "qms",
    "ai",
    "mock",
    "config"
  ],
  "author": "QMS-AI Team",
  "license": "MIT",
  "directories": {
    "test": "tests"
  }
}
